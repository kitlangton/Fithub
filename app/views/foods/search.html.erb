<h1>Suggestions for <%=@food_search%></h1>
<div class="row">
  <div class="col-sm-12">
    <table class="table">
      <thead>
        <th>Name</th>
        <th>Calories</th>
      </thead>
      <tbody>
        <%= form_for @meal, url: { controller: 'meals', action: 'add_food' } do |f| %>
          <%= f.submit 'Add Food' %>
          <% @results.each do |food| %>
            <%= f.fields_for food do |food_fields| %>
              <tr>
                <td>
                  <div class="form-group">
                    <%= food_fields.label :name %>
                    <%= food_fields.text_field :name, class: 'form-control'  %>
                  </div>
                </td>
                <td>
                  <div class="form-group">
                    <%= food_fields.label :calories %>
                    <%= food_fields.text_field :calories, class: 'form-control' %>
                  </div>
                </td>
                <td>
                  <div class="form-group">
                    <%= food_fields.label :quantity %>
                    <%= food_fields.text_field :quantity, class: 'form-control' %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
